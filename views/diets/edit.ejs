                      </select>
                     </div>
                    
              
              <div class="form-group">
                    <button id="ccc" class="ui black button btn-block"><span class="color">Submit</span></button>
               </div>
        
             </form>
             <a id="ccc"class="ui black button  " href="/diets"><span class="color">Back</span></a>
        </div>
