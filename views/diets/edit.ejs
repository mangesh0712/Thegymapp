<div class="container form">
    
<h2 style="text-align:center;" class="textcolor">Edit Info About Your Diet Plan</h2>
      <div style="width :40%; margin: 20px auto;">
           <form action="/diets/<%= data._id %>?_method=PUT" method="POST">
               <div class="form-group">
                    <input class="form-control" type="text"value="<%= data.name %>" placeholder="Name" name="name">
                 </div>
                 <div class="form-group" >
                        <div class="row">
                            <div class="col-md-8">
                                  <input class="form-control" type="text" value="<%= data.image%>" placeholder="Add any Motivational image..." name="image">
                            </div>
                            <div class="col-md-4">
                                  <button class="ui white button"><a href="https://unsplash.com/search/photos/motivation">Here</a></button>
                            </div>
                        </div>
                         
                          
                    </div>
                    <div class="form-group" >
                        <label> <h5 class="textcolor">Pick a date...</h5></label>
                          <input class="form-control"  type="date" name="date" value="<%= data.date%>" >
                    </div>
                 
                  <div class="form-group" >
                              <label> <h5 class="textcolor">Weight</h5></label>
                        <input class="form-control"  type="text" value="<%= data.weight%>" placeholder="Weight in kg" name="weight">
                  </div>
                  <div class="form-group" >
                              <label> <h5 class="textcolor">Bodyfat</h5></label>
                        <input class="form-control"  type="text" value="<%= data.bodyfat%>" placeholder="Body-fat in %" name="bodyfat">
                  </div>
              <div class="form-group">
                    <select class="ui dropdown" name="breakfast" placeholder="hhhh" value="<%= data.breakfast %>" >
                            <option value="Select breakfast">Breackfast</option>
                            <option value=<%=a%>><%=a%></option>
                            <option value=<%=b%>><%=b%></option>
                            <option value=<%=c%>><%=c%></option>
                            <option value=<%=d%>><%=d%></option>
                          
                           
                    </select>
                   </div>
      <!-- drop 2 -->
                   <div class="form-group" >
                      <select name="lunch"value="<%= data.lunch %> "class="ui dropdown">
                            <option value=""><span >Lunch</span></option>
                            <option value=<%=e%>><%=e%></option>
                            <option value=<%=f%>><%=f%></option>
                           <option value=<%=g%>><%=g%></option>
                           <option value=<%=h%>><%=h%></option>
                          
                      </select>
                     </div>
    <!-- drop3 -->
                     <div class="form-group">
                        <select name="snack" value="<%= data.snack %>" class="ui dropdown">
                                <option value="">Snack</option>
                                <option value=<%=i%>><%=i%></option>
                              <option value=<%=j%>><%=j%></option>
                                <option value=<%=k%>><%=k%></option>
                                <option value=<%=l%>><%=l%></option>
                           
                            
                        </select>
                       </div>
    <!-- drop4 -->
                       <div class="form-group">
                          <select name="prework" value="<%= data.prework %>" class="ui dropdown">
                                <option value="">Preworkout</option>
                                <option value=<%=m%>><%=m%></option>
                                <option value=<%=n%>><%=n%></option>
                                <option value=<%=o%>><%=o%></option>
                                <option value=<%=p%>><%=p%></option>
                              
                          </select>
                         </div>
     <!-- drop5 -->
